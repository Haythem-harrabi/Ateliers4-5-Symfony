<td>{{t.username}} </td> <td>{{t.email}} </td><td>{{t.nbbooks}} </td><td><a href={{ path('updateF',  {'id' : t.id}) }}> Edit</a> <a href={{ path('remove',  {'id' : t.id}) }}> Delete </a></td>
</tr>
{% endfor %}
</table>